<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Fide-Gaming</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/JN_Aplicacion.styles.css" asp-append-version="true" />
     <link rel="stylesheet" href="~/js/Datatables/Datatables.css" asp-append-version="true" />
</head>
@{
    string nombre = Context.Session.GetString("Nombre");
    int? IDUsuario = Context.Session.GetInt32("IDUsuario");
}
<body style="background-image: url(https://fondosmil.com/fondo/25330.jpg); background-size:cover">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="HomePage" asp-action="Index"><FONT color="blue">Fide</FONT><FONT color="green">-</FONT><FONT color="red">Gaming</FONT></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                      
                          <li class="nav-item">
                            @Html.ActionLink("Playstation", "FiltrarJuego", "Producto", new { ID_TIPO = 1 }, new { @class = "nav-link",@style="color: darkblue"})
                        </li>

                         <li class="nav-item">
                            @Html.ActionLink("XBOX", "FiltrarJuego", "Producto", new { ID_TIPO = 3 }, new { @class = "nav-link",@style="color: green" })
                        </li>
                        
                         <li class="nav-item">
                            @Html.ActionLink("Nintendo", "FiltrarJuego", "Producto", new { ID_TIPO = 2 }, new { @class = "nav-link",@style="color: red" })
                        </li>
                         <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Producto" asp-action="ConsultarJuegos">Todos los productos</a>
                        </li>
                         <li class="nav-item">
                            @Html.ActionLink("Carrito", "MostrarCarrito", "Carrito", new { ID_USUARIO = @IDUsuario }, new { @class = "nav-link",@style="color: black" })
                        </li>

                     @{
                    if (Context.Session.GetString("Token") == null)
                    {
                                    <li class="nav-item" style="margin-left:1000px" >
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="InicioSesion">Iniciar Sesion</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Persona" asp-action="RegistrarUsuario" >Registrarse</a>
                                    </li>
                        
                            } else
                            {
                                     <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle" href="#" id="navbarScrollingDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false" style="margin-left:1050px">
                                            Bienvenido: @(nombre)
                                        </a>
                                        <ul class="dropdown-menu" aria-labelledby="navbarScrollingDropdown" style="margin-left:1050px">
                                        
                                            <li>
                                                 @Html.ActionLink("Editar Usuario", "ActualizarUsuario", "Persona", new { ID_USUARIO = @IDUsuario }, new { @class = "dropdown-item" })
                                            </li>
                                            <li>
                                                @Html.ActionLink("Cerrar Sesion", "CerrarSesion", "Login", new { /*ID_USUARIO = @IDUsuario */}, new { @class = "dropdown-item" })
                                            
                                            </li>
                                        </ul>
                                    </li>
                        }
                     }
                     
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <br/>
    <br/>
    <br/>
    <br/>
    <br/>
    <footer class="border-top footer text-muted" style="bottom: 0">
        <div class="container">
            &copy; 2022 - Fide-Gaming - <a asp-area="" asp-controller="HomePage" asp-action="Index">Inicio</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
     <script src="~/js/Datatables/Datatables.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
